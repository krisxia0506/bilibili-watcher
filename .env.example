# 应用端口配置
BACKEND_PORT=8080
FRONTEND_PORT=3000

# 数据库配置 (MySQL)
# 确保这些值与 docker-compose.yml 中 db 服务的 environment 匹配
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_DBNAME=bilibili_watcher
DATABASE_USER=watcher_user
DATABASE_PASSWORD=actual_watcher_password # <--- 替换为你的真实密码
DATABASE_ROOT_PASSWORD=actual_watcher_password
# Bilibili 相关配置 (如果选择从环境变量加载)
BILIBILI_UID=12345678 # <--- 替换为你的真实 UID (取消注释并设置)
BILIBILI_COOKIE="SESSDATA=...." # <--- 替换为你的真实 Cookie (取消注释并设置)

# 定时任务配置 (如果选择从环境变量加载)
SCHEDULER_CRON="0 0 * * *" # (取消注释并设置，如果需要覆盖默认值)

# Gin 运行模式
GIN_MODE=release # (取消注释并设置，如果需要覆盖默认值)